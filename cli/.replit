# Replit configuration for Kartavya CLI
run = "python -m pip install -e . && kartavya setup && kartavya chat interactive"
language = "python3"

[nix]
channel = "stable-22_11"

[env]
PYTHONPATH = "/home/runner/$REPL_SLUG/src"
KARTAVYA_API_URL = "http://localhost:8000"
KARTAVYA_COLOR = "true"

[gitHubImport]
requiredFiles = [".replit", "pyproject.toml"]

[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[deployment]
run = ["sh", "-c", "python -m pip install -e . && kartavya"]
deploymentTarget = "cloudrun"
