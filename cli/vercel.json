{
  "version": 2,
  "name": "kartavya-siem",
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "web/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/docs", 
      "dest": "/api/index.py"
    },
    {
      "src": "/health",
      "dest": "/api/index.py"
    },
    {
      "src": "/openapi.json",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/web/index.html"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "API_HOST": "0.0.0.0",
    "API_PORT": "3000",
    "KARTAVYA_API_URL": "https://your-app.vercel.app"
  },
  "functions": {
    "api/index.py": {
      "runtime": "python3.9",
      "maxDuration": 30
    }
  },
  "installCommand": "pip install -r backend/requirements.txt"
}
