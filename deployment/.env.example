# Kartavya SIEM Assistant Configuration

# Application
APP_NAME="Kartavya SIEM Assistant"
APP_VERSION="1.0.0"
DEBUG=false

# API
API_PREFIX="/api/v1"
ALLOWED_ORIGINS=["http://localhost:3000"]

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=elastic
