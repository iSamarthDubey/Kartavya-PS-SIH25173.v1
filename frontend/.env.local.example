# SYNRGY Frontend Environment Variables
# Copy this to .env.local and customize for your environment

# API Configuration (Production defaults to relative paths for security)
# Development: Use full URLs for local testing
VITE_API_BASE_URL=http://localhost:8000/api
VITE_WS_BASE_URL=ws://localhost:8000

# Production URLs (commented out - uncomment and configure for production)
# VITE_API_BASE_URL=/api
# VITE_WS_BASE_URL=wss://your-domain.com

# Environment
VITE_NODE_ENV=development

# Performance Configuration
VITE_REQUEST_TIMEOUT=30000
VITE_MAX_RETRY_ATTEMPTS=3
VITE_RETRY_DELAY=1000

# Feature Flags
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_DEVTOOLS=true

# Security (Production: set these to false)
VITE_ENABLE_SOURCE_MAPS=true
VITE_ENABLE_ERROR_REPORTING=true
