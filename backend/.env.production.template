# Production Environment Configuration Template
# Copy this to .env and update with your actual values

# Basic Configuration
ENVIRONMENT=production

# CORS Configuration for Production
# IMPORTANT: Replace these with your actual deployment URLs
CORS_ORIGINS=https://your-vercel-app.vercel.app,https://your-netlify-app.netlify.app,https://your-custom-domain.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_HEADERS=Authorization,Content-Type,X-Requested-With,Accept,Origin,Cache-Control,X-File-Name
CORS_EXPOSE_HEADERS=X-Total-Count,X-Page-Count,Content-Disposition
CORS_MAX_AGE=3600

# NEVER set CORS_ALLOW_ALL=true in production!
# CORS_ALLOW_ALL=false

# Database Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database
REDIS_URL=redis://username:password@host:port/0

# Security
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
API_SECRET_KEY=your-api-secret-key

# Optional: Enable debug mode (NOT recommended for production)
# DEBUG=false
