# Kartavya SIEM Backend Environment Configuration
# Copy this file to .env and configure according to your environment

# =============================================================================
# CORE SETTINGS
# =============================================================================

# Environment mode: "demo", "development", "production"  
ENVIRONMENT=demo

# Default data source mode: "AUTO" (recommended), "MULTI", or specific platform
DEFAULT_SIEM_PLATFORM=AUTO

# JWT Secret for authentication (change in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# API Settings
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# AI/NLP SETTINGS  
# =============================================================================

# Enable AI assistant features
AI_ENABLED=true

# OpenAI API settings (optional)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Use spaCy for enhanced entity extraction (optional)
ASSISTANT_USE_SPACY=false

# =============================================================================
# DATA SOURCE CONFIGURATIONS
# =============================================================================

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_USE_SSL=false
ELASTICSEARCH_VERIFY_CERTS=false

# Wazuh Configuration
WAZUH_HOST=localhost
WAZUH_PORT=55000
WAZUH_USERNAME=wazuh
WAZUH_PASSWORD=wazuh
WAZUH_USE_SSL=true

# Splunk Configuration
SPLUNK_HOST=localhost
SPLUNK_PORT=8089
SPLUNK_USERNAME=admin
SPLUNK_PASSWORD=changeme
SPLUNK_USE_SSL=true

# =============================================================================
# DATABASE CONFIGURATIONS
# =============================================================================

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ENABLED=false

# MongoDB Configuration  
MONGODB_CONNECTION_STRING=mongodb://localhost:27017/kartavya_siem
MONGODB_DATABASE=kartavya_siem
MONGODB_ENABLED=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_ENABLED=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8501

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Session timeout (hours)
SESSION_TIMEOUT_HOURS=24

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production mode settings (only used when ENVIRONMENT=production)
PRODUCTION_REQUIRE_REAL_SOURCES=true
PRODUCTION_DISABLE_DEBUG=true
PRODUCTION_ENABLE_METRICS=true

# External monitoring/logging
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# =============================================================================
# DEVELOPMENT/TESTING SETTINGS  
# =============================================================================

# Mock data settings
MOCK_DATA_ENABLED=true
MOCK_RESPONSE_DELAY=0.1

# Test database settings
TEST_DATABASE_URL=sqlite:///./test.db

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Multi-source query settings
MULTI_SOURCE_TIMEOUT=30
MULTI_SOURCE_MAX_CONCURRENT=10
MULTI_SOURCE_CORRELATION_FIELDS=timestamp,user,host,ip

# Cache settings
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Query optimization
QUERY_CACHE_ENABLED=true
QUERY_TIMEOUT_SECONDS=30
MAX_QUERY_RESULTS=10000

# Platform detection settings
PLATFORM_DETECTION_CACHE_TTL=300
PLATFORM_DETECTION_TIMEOUT=10

# Logging configuration
LOG_TO_FILE=false
LOG_FILE_PATH=logs/kartavya_backend.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30
