# CORE SETTINGS
ENVIRONMENT=demo
DEFAULT_DATA_SOURCE=auto  # Unified naming (was DEFAULT_SIEM_PLATFORM)
DATA_SOURCE_MODE=auto

# API Configuration - Standardized
API_HOST=0.0.0.0
