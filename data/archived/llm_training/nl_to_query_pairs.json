[
    {
        "natural_language": "Show me all failed login attempts in the last hour",
        "elasticsearch_query": {
            "query": {
                "bool": {
                    "must": [
                        {"match": {"event.type": "authentication"}},
                        {"match": {"event.outcome": "failure"}}
                    ],
                    "filter": [
                        {"range": {"@timestamp": {"gte": "now-1h", "lte": "now"}}}
                    ]
                }
            }
        },
        "wazuh_query": {
            "q": "rule.groups:authentication AND rule.groups:failed",
            "timestamp": "now-1h TO now"
        }
    },
    {
        "natural_language": "Find all network traffic from IP 192.168.1.100",
        "elasticsearch_query": {
            "query": {
                "bool": {
                    "should": [
                        {"match": {"source.ip": "192.168.1.100"}},
                        {"match": {"destination.ip": "192.168.1.100"}}
                    ]
                }
            }
        },
        "wazuh_query": {
            "q": "data.srcip:192.168.1.100 OR data.dstip:192.168.1.100"
        }
    },
    {
        "natural_language": "Count high severity alerts today",
        "elasticsearch_query": {
            "query": {
                "bool": {
                    "must": [
                        {"match": {"log.level": "high"}}
                    ],
                    "filter": [
                        {"range": {"@timestamp": {"gte": "now/d", "lte": "now"}}}
                    ]
                }
            },
            "size": 0
        },
        "wazuh_query": {
            "q": "rule.level:>=10",
            "timestamp": "now/d TO now"
        }
    },
    {
        "natural_language": "Show malware detection events this week",
        "elasticsearch_query": {
            "query": {
                "bool": {
                    "must": [
                        {"match": {"event.category": "malware"}}
                    ],
                    "filter": [
                        {"range": {"@timestamp": {"gte": "now-1w", "lte": "now"}}}
                    ]
                }
            }
        },
        "wazuh_query": {
            "q": "rule.groups:malware",
            "timestamp": "now-1w TO now"
        }
    },
    {
        "natural_language": "Find DNS queries to suspicious domains",
        "elasticsearch_query": {
            "query": {
                "bool": {
                    "must": [
                        {"match": {"network.protocol": "dns"}},
                        {"wildcard": {"dns.question.name": "*suspicious*"}}
                    ]
                }
            }
        },
        "wazuh_query": {
            "q": "rule.groups:dns AND data.query:*suspicious*"
        }
    },
    {
        "natural_language": "Show user admin activity in the last 24 hours",
        "elasticsearch_query": {
            "query": {
                "bool": {
                    "must": [
                        {"match": {"user.name": "admin"}}
                    ],
                    "filter": [
                        {"range": {"@timestamp": {"gte": "now-24h", "lte": "now"}}}
                    ]
                }
            }
        },
        "wazuh_query": {
            "q": "data.srcuser:admin",
            "timestamp": "now-24h TO now"
        }
    },
    {
        "natural_language": "Find port scan attempts",
        "elasticsearch_query": {
            "query": {
                "bool": {
                    "must": [
                        {"match": {"event.type": "connection"}},
                        {"range": {"network.bytes": {"lte": 100}}}
                    ],
                    "should": [
                        {"terms": {"destination.port": [22, 23, 80, 443, 3389]}}
                    ]
                }
            }
        },
        "wazuh_query": {
            "q": "rule.groups:recon AND rule.groups:scan"
        }
    },
    {
        "natural_language": "Show brute force attacks",
        "elasticsearch_query": {
            "query": {
                "bool": {
                    "must": [
                        {"match": {"event.type": "authentication"}},
                        {"match": {"event.outcome": "failure"}}
                    ],
                    "filter": [
                        {"range": {"source.ip": {"count": {"gte": 10}}}}
                    ]
                }
            }
        },
        "wazuh_query": {
            "q": "rule.groups:authentication AND rule.groups:multiple_drops"
        }
    }
]